api.ideaboard.co.uk {
  header {
    # Access-Control-Allow-Origin *
  }
  reverse_proxy api:3000 api_1:3000 api_2:3000 api_3:3000 api_4:3000 api_5:3000 {
    health_path /health
    health_interval 10s
  }
}

